#!/usr/bin/env bash

START_TIME=$SECONDS

run_full_import="${1:-0}"

## -------------------------------------------------------------------------------------

# Convert data from CSV to Json
/usr/bin/php /vagrant/bin/console SaintCoinachJsonCacheCommand

# run ENpcBase on its own
/usr/bin/php /vagrant/bin/console SaintCoinachRedisCommand --start=0 --count=500 --full=$run_full_import --content=ENpcBase -q

sleep 5

for i in {1..20}
do
    start_point=$(( $i * 25 ))

    echo " --------- Loop: $i / 20 - chunk: $start_point ------------------------------------"

    /usr/bin/php /vagrant/bin/console SaintCoinachRedisCommand --start=$start_point --count=25 --full=$run_full_import -q

    sleep 3
done

# Populate market items
sleep 3
/usr/bin/php /vagrant/bin/console Companion_AutoPopulateItemsCommand

sleep 3
/usr/bin/php /vagrant/bin/console SaintCoinachRedisCustomCommand Quest

# Add custom data
sleep 3
/usr/bin/php /vagrant/bin/console SaintCoinachRedisCustomCommand

sleep 3
/usr/bin/php /vagrant/bin/console SaintCoinachRedisCustomCommand SkillDescriptions


# Add on patch info
sleep 3
# /usr/bin/php /adminer/bin/console UpdatePatchCommand 1

# Update search
sleep 3
#/usr/bin/php /adminer/bin/console UpdateSearchCommand dev

# Update lore search
sleep 3
#/usr/bin/php /adminer/bin/console UpdateSearchLoreCommand dev

## -------------------------------------------------------------------------------------

end=`date +%s`

ELAPSED_TIME=$(($SECONDS - $START_TIME))

echo ""
echo "Completed"
echo "$(($ELAPSED_TIME/60)) min $(($ELAPSED_TIME%60)) sec"
echo ""
